{
  "extends": "./tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@uprake/utils": ["libs/utils/src/index.ts"],
      "@uprake/react": ["libs/react/src/index.ts"],
      "@uprake/ui": ["libs/ui/src/index.ts"],
      "~/web-ext/*": ["apps/web-ext/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
